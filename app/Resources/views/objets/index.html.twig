{% extends 'base.html.twig' %}

{% block body %}
    <div class="container m-t-3 p-t-1">
        <h1>Objets disponible</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Action</th>
                <th>Cordo</th>
            </tr>
            </thead>
            <tbody>
            {% for objet in objets %}
                <tr>
                    <td>{{ objet.nom }}</td>
                    <td>{{ objet.description }}</td>
                    <td>{{ objet.categorie }}</td>
                    <td>
                        <a class="btn btn-btn" style="background:grey ; color:white"
                           href="{{ path('get_objet', {'id': objet.id}) }}" role="button">JE LE VEUX</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!--<ul>
