{% extends 'base.html.twig' %}
{% form_theme edit_form ':BootstrapTemplate:bootstrap.html.twig' %}
{% block body %}
    <div class="container m-t-3 p-t-1">
        <h1>Editer un objet</h1>
        <div class="col-md-4 col-md-offset-4">
            {{ form_start(edit_form) }}
            <fieldset class="form-group">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form.nom) }}
                {{ form_label(edit_form.nom) }}
                {{ form_widget(edit_form.nom) }}

                {{ form_errors(edit_form.description) }}
                {{ form_label(edit_form.description) }}
                {{ form_widget(edit_form.description) }}

                {{ form_errors(edit_form.categorie) }}
                {{ form_label(edit_form.categorie) }}
                {{ form_widget(edit_form.categorie, {'attr': {'class':
                    'form-control'}}) }}
            </fieldset>
            <input class="btn btn-success" type="submit" value="Editer"/>
            {{ form_end(edit_form) }}



            {{ form_start(delete_form) }}

            <div class="m-y-1">
                <input class="btn btn-danger" type="submit" value="Supprimer">
            </div>
            {{ form_end(delete_form) }}
            <a href="{{ path('objets_show',{'id':app.user.id}) }}">Retour</a>

        </div>
    </div>
{% endblock %}
